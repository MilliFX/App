{
  "name": "@millifx/chart",
  "version": "0.0.1",
  "author": "Jack Song",
  "license": "MIT",
  "description": "An Chart component",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:cjs && yarn run build:es && yarn run build:types",
    "build:cjs": "tsc --project tsconfig.json",
    "build:es": "tsc --project tsconfig.es.json",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "jest --watchAll=false --passWithNoTests",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "tsc --noEmit --project tsconfig.json && eslint --fix",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "./dist/es/index.js",
      "import": "{ createComponent }"
    }
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.9.2",
    "@testing-library/react": "^11.2.5",
    "@types/react": "^17.0.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "ts-jest": "^26.5.1"
  },
  "dependencies": {
    "@millifx/utils": "^0.0.1",
    "apexcharts": "^3.27.3",
    "bankers-round": "^1.0.6",
    "moment": "^2.29.1",
    "react-apexcharts": "^1.3.9"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "typescript": "^4.0.0"
  }
}
