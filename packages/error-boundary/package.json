{
  "name": "@millifx/error-boundary",
  "version": "0.0.1",
  "author": "Jack Song",
  "license": "MIT",
  "description": "An Error Boundary which reports to Sentry",
  "sideEffects": false,
  "main": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:package && yarn run build:types",
    "build:package": "tsc --project tsconfig.json",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "jest --watchAll=false",
    "format": "prettier --write src/**/*.ts{,x} --write",
    "lint": "tsc --noEmit --project tsconfig.json && eslint --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/react": "^17.0.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "ts-jest": "^26.5.1"
  },
  "dependencies": {
    "@millifx/utils": "^0.0.1",
    "@sentry/react": "^6.1.0",
    "@sentry/tracing": "^6.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "typescript": "^4.0.0"
  }
}
