{
  "name": "@millifx/utils",
  "version": "0.0.1",
  "author": "Jack Song",
  "license": "MIT",
  "description": "An utils package for MilliFX",
  "sideEffects": false,
  "main": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:package && yarn run build:types",
    "build:package": "tsc --project tsconfig.json",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "jest --watchAll=false",
    "format": "prettier --write src/**/*.ts{,x} --write",
    "lint": "tsc --noEmit --project tsconfig.json && eslint --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "ts-jest": "^26.5.1"
  },
  "peerDependencies": {
    "typescript": "^4.0.0"
  }
}
