{
  "name": "@millifx/monorepo",
  "private": true,
  "workspaces": [
    "packages/utils",
    "packages/error-boundary",
    "packages/*",
    "app",
    "storybook"
  ],
  "scripts": {
    "start": "yarn workspace @millifx/app run start",
    "storybook": "yarn workspace @millifx/storybook run start",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test --coverage",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint",
    "ci": "yarn install --force && yarn build && yarn lint && yarn format && yarn test"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "prettier": "^2.2.1",
    "eslint-config-airbnb": "^18.2.1",
    "@types/jest": "^26.0.15"
  }
}